@page
@model features.Pages.GoodsDonations.AllocateModel
@{
}
<br />
<h2>Allocate Good Donation</h2>

@if (Model.errorMessage.Length>0)
{
    <div  class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.goodsDonationsInfo.name" />
        </div>

    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Donation Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="donoDate" value="@Model.goodsDonationsInfo.donoDate" />
        </div>
      
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Number of items</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="noOfItems" value="@Model.goodsDonationsInfo.noOfItems" />
        </div>

    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="category" value="@Model.goodsDonationsInfo.category" />
        </div>

    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Donation description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="donoDesc" value="@Model.goodsDonationsInfo.donoDesc" />
        </div>

    </div>

      <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Allocate to:</label>
        <div class="col-sm-6">
            <select class="form-control" name="Disaster" asp-for="@Model.disasterPicked" asp-items="@Model.disasterOptions"> </select>
        </div>

    </div>


        @if (Model.successMessage.Length>0)
{
    <div  class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.successMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
     <div class="row mb-3">
       
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary" >Submit </button> 
        </div>
         <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a> 
        </div>

    </div>

</form>
