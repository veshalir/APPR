@page
@model features.Pages.Disasters.CreateModel
@{
}
<br />
<h2>New Disaster</h2>

@if (Model.errorMessage.Length>0)
{
    <div  class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Required Aid</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="RequiredAid" value="@Model.DisastersInfo.requiredAid" />
        </div>

    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Start Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="startDate" value="@Model.DisastersInfo.startDate" />
        </div>
      
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">End Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="endDate" value="@Model.DisastersInfo.endDate" />
        </div>

    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Location</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="LOCATION" value="@Model.DisastersInfo.location" />
        </div>

    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Disaster description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="disasterDesc" value="@Model.DisastersInfo.disasterDesc" />
        </div>

    </div>

        @if (Model.successMessage.Length>0)
{
    <div  class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.successMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
     <div class="row mb-3">
       
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary" >Submit </button>
        </div>
         <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a> 
        </div>

    </div>

</form>
